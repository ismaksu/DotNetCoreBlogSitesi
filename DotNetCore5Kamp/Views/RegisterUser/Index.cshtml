@model UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>ISM Blog | Kayıt</title>

    <link href="~/adminLyt/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/adminLyt/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/adminLyt/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/adminLyt/css/animate.css" rel="stylesheet">
    <link href="~/adminLyt/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">ISM</h1>

            </div>
            <h3>ISM Blog'a Kayıt Olun</h3>
            <p>Bir hesap oluşturun ve bu dünyanın içine atılın.</p>

            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="@Model.Username" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="İsim Soyisim" asp-for="@Model.Name" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" placeholder="Mail" asp-for="@Model.Mail" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Şifre" asp-for="@Model.Password" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.PasswordControl" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Şifreyi Onaylayın" asp-for="@Model.PasswordControl" required="">
                </div>
                <div class="form-group" style="user-select: none;">
                    <div class="checkbox i-checks"><label> <input type="checkbox" required=""><i></i> Son kullanıcı sözleşmesini onaylıyorum. </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Zaten bir hesabın var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Login/Index/">Giriş Yap</a>
            </form>

            <div class="text-danger" asp-validation-summary="ModelOnly">
                
            </div>

            <p class="m-t"> <small>ISM Blog &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/adminLyt/js/jquery-3.1.1.min.js"></script>
    <script src="~/adminLyt/js/popper.min.js"></script>
    <script src="~/adminLyt/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/adminLyt/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
