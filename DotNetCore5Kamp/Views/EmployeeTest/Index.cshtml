@using DotNetCore5Kamp.Controllers
@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Adı</th>
                <th>İşlemler</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td><b>@item.ID</b></td>
                    <td>@item.Name</td>
                    <td>
                        <a href="/EmployeeTest/EditEmployee/@item.ID" class="btn btn-outline-primary">Düzenle</a> &nbsp;
                        <a href="/EmployeeTest/DeleteEmployee/@item.ID" class="btn btn-outline-danger">Sil</a>
                    </td>
                </tr>
            }
        </table>
        <a href="/EmployeeTest/AddEmployee/" class="btn btn-info">Yeni Employee Ekleme</a>
    </div>
</div>