<div class="comment-top">
    <h4>Bir Yorum Bırak</h4>
    <div class="comment-bottom">
        <form method="post">
            <input class="form-control" type="text" name="CommentUserName" placeholder="Kullanıcı Adınız" required="">
            @*<input class="form-control" type="email" name="Email" placeholder="Mail Adresi" required="">*@

            <input class="form-control" type="text" name="CommentTitle" placeholder="Yorum Başlığı" required="">

            <textarea class="form-control" name="CommentValue" placeholder="Yorumun..." required=""></textarea>
            <button type="submit" id="submitComment" class="btn btn-primary submit">Gönder</button>
        </form>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $('#submitComment').click(function () {
        let comment = {
            CommentUserName: $('#CommentUserName').val(),
            CommentTitle: $('#CommentTitle').val(),
            CommentValue: $('#CommentValue').val()
        };

        $.ajax({
            type: "post",
            url: "/Comment/PartialAddComment/",
            data: comment,
            success: function (func) {
                var result = jQuery.parseJSON(func);
            }
        });
    });
</script>