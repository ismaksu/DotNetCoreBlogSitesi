@using EntityLayer.Concrete
@model List<Message2>

<style>
    .dropdown-item:hover h6{
        color: #0094ff;
    }
</style>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    <div class="dropdown-divider"></div>
    @foreach (var item in Model.Take(5))
    {
        <a class="dropdown-item preview-item" href="/Message/MessageDetails/@item.MessageID/">
            <div class="preview-thumbnail">
                <img src="@item.SenderUser.AuthorImage" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderUser.AuthorName</h6>
                <p class="text-gray mb-0"> @item.MessageTitle </p>
            </div>
        </a>
        <div class="dropdown-divider"></div>
    }
    <h6 class="p-3 mb-0 text-center">4 yeni mesaj</h6>
</div>