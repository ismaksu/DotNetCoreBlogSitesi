@using EntityLayer.Concrete
@model List<Blog>

    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Son 10 Blog</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Blog Başlığı </th>
                                    <th> Kategori </th>
                                    <th> Oluşturulma Tarihi </th>
                                    <th> İşlemler </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <b>@item.BlogID</b>
                                        </td>
                                        <td>
                                            <img src="@item.BlogImage" class="rounded-sm" style="width: 60px; margin-right: 10px;" alt="image"> <a href="/Blog/BlogDetails/@item.BlogID" target="_blank">@item.BlogTitle</a>
                                        </td>
                                        <td>
                                            <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                                        </td>
                                        <td> @(((DateTime)item.BlogCreationDate).ToString("dd-MMM-yyyy")) </td>
                                        <td> <a href="/Blog/BlogDetails/@item.BlogID" target="_blank" class="btn btn-outline-behance">Bloğa Git</a> </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>