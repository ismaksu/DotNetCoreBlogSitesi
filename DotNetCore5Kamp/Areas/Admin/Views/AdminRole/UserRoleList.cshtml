@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h3 class="card-header">Kullanıcı Rol Listesi</h3>
    <div class="card-body">
        <table class="table table-hover">
            <tr>
                <th>Kullanıcı</th>
                <th>Rol Ata</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td><a href="/Admin/AdminRole/AssignRole/@item.Id" class="btn btn-outline-primary">Rol Ata</a></td>
                </tr>
            }
        </table>
        <a href="/Admin/AdminRole/Index/" class="btn btn-info"><i class="fa fa-address-card"></i>&nbsp; Rol Listesi</a>
    </div>
</div>