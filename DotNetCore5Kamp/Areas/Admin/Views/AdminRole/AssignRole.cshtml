@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h3 class="card-header">Kullanıcı Rol Ataması</h3>
    <div class="card-body">
        <form method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].RoleID" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" />
                    <label class="form-check-label" for="@Model[i].Exists">@Model[i].RoleName</label>
                </div>
            }

            <br />
            <button class="btn btn-primary" href="/Admin/AdminRole/AssignRole/"><i class="fa fa-check"></i> &nbsp; Değişiklikleri Kaydet</button>
            <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-primary"><i class="fa fa-mail-reply"></i> &nbsp; Kullanıcı Listesine Dön</a>
        </form>
    </div>
</div>
