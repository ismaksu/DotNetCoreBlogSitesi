@model List<EntityLayer.Concrete.Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>ISM Blog | Admin Paneli</title>

    <link href="~/adminLyt/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/adminLyt/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/adminLyt/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/adminLyt/css/animate.css" rel="stylesheet">
    <link href="~/adminLyt/css/style.css" rel="stylesheet">

</head>

<body>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox " style="box-shadow: 0 0 5px -1px black; border-radius: 7px;">
                <div class="ibox-title" style="border-radius: 7px;">
                    <h5>Yorumlar  </h5>
                </div>
                <div class="ibox-content" style="border-radius: 7px;">

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tarih</th>
                                <th>Kullanıcı</th>
                                <th>Başlık</th>
                                <th>İçerik</th>
                                <th>Puan</th>
                                <th>Blog</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BlogID</td>
                                    <td><span class="pie">@item.CommentDate.ToString("dd MMM yyyy")</span></td>
                                    <td>@item.CommentUserName</td>
                                    <td>@item.CommentTitle</td>
                                        @if (item.CommentValue.Length > 50)
                                        {
                                            <td>@item.CommentValue.Substring(0, item.CommentValue.Substring(0, 50).LastIndexOf(" "))..</td>
                                        }else{
                                            <td>@item.CommentValue</td>
                                        }
                                    <td class="text-navy"><i class="fa fa-level-up"></i> @item.BlogScore</td>
                                    <td class="text-navy"> <a href="/Blog/BlogDetails/@item.BlogID/">@item.Blog.BlogTitle</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <!-- Mainly scripts -->
    <script src="~/adminLyt/js/jquery-3.1.1.min.js"></script>
    <script src="~/adminLyt/js/popper.min.js"></script>
    <script src="~/adminLyt/js/bootstrap.js"></script>
    <script src="~/adminLyt/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/adminLyt/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Peity -->
    <script src="~/adminLyt/js/plugins/peity/jquery.peity.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/adminLyt/js/inspinia.js"></script>
    <script src="~/adminLyt/js/plugins/pace/pace.min.js"></script>

    <!-- iCheck -->
    <script src="~/adminLyt/js/plugins/iCheck/icheck.min.js"></script>

    <!-- Peity -->
    <script src="~/adminLyt/js/demo/peity-demo.js"></script>

    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>

</body>

</html>
