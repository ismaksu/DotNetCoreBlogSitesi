@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | E-commerce</title>

    <link href="~/adminLyt/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/adminLyt/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- Toastr style -->
    <link href="~/adminLyt/css/plugins/toastr/toastr.min.css" rel="stylesheet">

    <link href="~/adminLyt/css/animate.css" rel="stylesheet">
    <link href="~/adminLyt/css/style.css" rel="stylesheet">



</head>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box" style="border-radius: 10px; border: solid 1px gray;">

                            <div>
                                <img style="border-radius: 10px;" class="form-control" src="@item.BlogImage">
                            </div>
                            <div class="product-desc">
                                <span class="product-price">
                                    @item.BlogCreationDate.ToString("dd MMMM yyyy")
                                </span>
                                <small class="text-muted">@item.Category.CategoryName</small>
                                <a href="/Blog/BlogDetails/@item.BlogID" class="product-name"> @item.BlogTitle</a>

                                <div class="small m-t-xs">
                                    @item.BlogContent.Substring(0, item.BlogContent.Substring(0, 100).LastIndexOf(" "))..
                                </div>
                                <div class="m-t text-righ">
                                    <a href="#" class="btn btn-xs btn-outline btn-warning">Düzenleyin <i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>



    <!-- Mainly scripts -->
    <script src="~/adminLyt/js/jquery-3.1.1.min.js"></script>
    <script src="~/adminLyt/js/popper.min.js"></script>
    <script src="~/adminLyt/js/bootstrap.js"></script>
    <script src="~/adminLyt/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/adminLyt/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/adminLyt/js/inspinia.js"></script>
    <script src="~/adminLyt/js/plugins/pace/pace.min.js"></script>

</body>

</html>
